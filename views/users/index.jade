extends ../layout

block content
  h1 See all the users
  a(href="/users/new") Create a new user
  table(class="striped")
    thead
      th ID
      th Name
      th Username
      th Edit User
      th Delete User
    tbody
      each user in users
        tr
          td #{user.id}
          td #{user.full_name}
          td #{user.username}
          td
            a(href="/users/#{user.id}/edit") Edit
          td
            form(action="/users/#{user.id}?_method=DELETE" method="POST")
              input(type="submit" value="delete" class="waves-effect waves-light btn red")
    tfoot
